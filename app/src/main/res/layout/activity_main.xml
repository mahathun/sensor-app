<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mahathun.myapplication5.app.MainActivity"
    android:id="@+id/layout"
    android:padding="0dp">


    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sdf" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/target"
        android:text="sdddddddddddddddf" />

    <Button
        android:id="@id/target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/camera_preview"

        android:layout_alignParentLeft="true"

        android:layout_alignRight="@id/camera_preview"
        android:layout_gravity="center"
        android:layout_marginBottom="120.0dip"
        android:layout_marginLeft="250.0dip"
        android:layout_marginRight="250.0dip"
        android:layout_marginTop="120.0dip"
        android:background="@drawable/target" />

    <Button
        android:id="@+id/button_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/target"

        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:text="Mark" />

    <Button
        android:id="@+id/button_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="changeActivity"
        android:layout_gravity="center"
        android:text="Finish"
        android:layout_below="@+id/button_mark"
        android:layout_alignParentRight="true"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner1"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button_finish" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="object"
        android:id="@+id/objMark"
        android:layout_alignBaseline="@+id/tv2"
        android:layout_alignBottom="@+id/tv2"
        android:layout_alignParentRight="true" />

</RelativeLayout>
