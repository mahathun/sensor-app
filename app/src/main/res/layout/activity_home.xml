<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mahathun.sensorapp.HomeActivity"
    android:clickable="false"
    android:background="@drawable/backgroundtheme2">

    <TextView
        android:text="@string/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FA8072"
        android:id="@+id/textView" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/newMap"
        android:src="@drawable/blue_house"

        android:scaleType="fitXY"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"

        android:layout_marginTop="73dp" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/loadMap"
        android:src="@drawable/load_plan"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/newMap"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="New Map"
        android:id="@+id/textView2"
        android:layout_above="@+id/loadMap"
        android:layout_alignParentLeft="true"

        android:layout_marginLeft="40dp"
        android:textColor="#FA8072" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Load Map"
        android:id="@+id/textView3"
        android:textColor="#FA8072"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentRight="true"

        android:layout_marginRight="40dp" />

</RelativeLayout>
